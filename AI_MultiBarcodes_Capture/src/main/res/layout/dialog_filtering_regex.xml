<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/regex_pattern"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etRegexPattern"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/regex_pattern_hint"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btPickPredefined"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pick_predefined"
        android:layout_marginBottom="16dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/condition_description"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/condition_description_hint"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="12dp" />

</LinearLayout>
